        <Label x:Name="lbl1" Content="Ikkunan Leveys (L):" HorizontalAlignment="Left" Margin="273,34,0,0" VerticalAlignment="Top" Width="103" Height="23" FontSize="10.667"/>
        <Label x:Name="lbl2" Content="Ikkunan Korkeus (H):" HorizontalAlignment="Left" Margin="264,63,0,0" VerticalAlignment="Top" Width="112" Height="23" FontSize="10.667"/>
        <Label x:Name="lbl3" Content="Karmipuun leveys (W):" HorizontalAlignment="Left" Margin="256,91,0,0" VerticalAlignment="Top" Width="120" Height="23" FontSize="10.667"/>
        <Label x:Name="lbl4" Content="Ikkunan ala (mm2):" HorizontalAlignment="Left" Margin="273,184,0,0" VerticalAlignment="Top" Width="103" Height="23" FontSize="10.667"/>
        <Label x:Name="lbl5" Content="Karmin piiri:" HorizontalAlignment="Left" Margin="296,231,0,0" VerticalAlignment="Top" Width="80" Height="23" FontSize="10.667"/>
        <Label x:Name="lbl6" Content="Karmin pinta-ala (mm2):" HorizontalAlignment="Left" Margin="264,259,0,0" VerticalAlignment="Top" Width="128" Height="23" FontSize="10.667"/>
        <TextBox x:Name="txtWindowSize" HorizontalAlignment="Left" Height="23" Margin="397,185,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextAlignment="Center" IsEnabled="False"/>
        <TextBox x:Name="txtBorderLength" HorizontalAlignment="Left" Height="23" Margin="397,231,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextAlignment="Center" IsEnabled="False"/>
        <TextBox x:Name="txtBorderSize" HorizontalAlignment="Left" Height="23" Margin="397,260,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextAlignment="Center" IsEnabled="False"/>
        <Rectangle Fill="#FF110A00" HorizontalAlignment="Left" Height="207" Margin="29,63,0,0" Stroke="Black" VerticalAlignment="Top" Width="215"/>
